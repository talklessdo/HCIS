<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Page.Hadir"
    android:background="@color/blueybm"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/petik">
        <TextView
            android:id="@+id/namaHadir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nama"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:layout_marginLeft="160dp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jam Masuk"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:layout_marginRight="13dp"
            />

        <TextView
            android:id="@+id/jamMasukHadir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jam masuk"
            android:textSize="22sp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jam Keluar"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:layout_marginRight="16dp"
            />

        <TextView
            android:id="@+id/jamKeluarHadir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jam keluar"
            android:textSize="22sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:layout_marginRight="49dp"
            />
        <TextView
            android:id="@+id/tanggalHadir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tanggal"
            android:textSize="22sp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:layout_marginRight="65dp"
            />

        <TextView
            android:id="@+id/statusHadir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="status"
            android:textSize="22sp"/>

    </LinearLayout>



</LinearLayout>